{
  "manifest_version": 3,
  "name": "Sentry Team Member Extractor",
  "version": "1.0.1",
  "description": "Extract team members from Sentry projects.",
  "action": {
    "default_popup": "popup.html",
    "default_title": "Sentry Team Member Extractor",
    "default_icon": {
      "16": "images/icon16.png",
      "32": "images/icon32.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "clipboardWrite",
    "contextMenus",
    "cookies"
  ],
  "host_permissions": [
    "https://sentry.io/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "images/icon16.png",
    "32": "images/icon32.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src 'self' https://*.ingest.us.sentry.io https://sentry.io"
  },
  "web_accessible_resources": [
    {
      "resources": ["dashboard.js"],
      "matches": ["<all_urls>"]
    }
  ]
} 